.header {
  margin-bottom: 2em;
  padding: 0 20px;

  .blog-title {
    font-size: 2.5em;
    text-align: center;
    padding-top: 0.5em
  }

  .subtitle {
    font-size: 14px;
    
  }

  .menu {
    margin: 0;
    padding: 0;
    margin-top: 10px;

    .menu-item {
      margin: 0 15px 0 0;
      padding: 3px 0 3px 0;
      display: inline-block;
    }

    .menu-item-link {
      color: #999;
      &:hover {
        color: #000;
      }
    }
  }
}